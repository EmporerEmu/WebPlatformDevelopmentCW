<!DOCTYPE html>
<html lang="en">
  <head>
    {{>head}}
  </head>
  <body>
    {{>nav}}
    <div class="container">
      <h1>Here be the planner/schedule</h1>

      <!-- Tasks table -->
      <table
        class="table table-striped table-light table-hover table-borderless"
      >
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Type</th>
            <th scope="col">Start Time</th>
            <th scope="col">End Time</th>
            <th scope="col">Date Added</th>
            <th scope="col">Edit/Delete</th>
            <th hidden style="display: none;" scope="col">ID</th>
          </tr>
        </thead>
        <tbody>
          {{#tasks}}
          <tr>
            <td>{{ name }}</td>
            <td>{{ type }}</td>
            <td>{{ startTime }}</td>
            <td>{{ endTime }}</td>
            <td>{{ added }}</td>
            <td>
              <a href="/new" class="btn btn-danger">Edit/Delete</a>
            </td>
            <td hidden style="display: none;">{{ _id }}</td>
          </tr>
          {{/tasks}}
        </tbody>
      </table>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
