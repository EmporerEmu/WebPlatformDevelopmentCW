<!DOCTYPE html>
<html lang="en">

<head>
    {{>shared/head}}
</head>

<body>
    <div class="container py-3">
        {{>shared/nav}}
        {{#task}}
        <form method="POST">
            <div class="mb-3">
                <label for="activityName" class="form-label">Activity Name</label>
                <input type="text" class="form-control" id="activityName" name="name" required value="{{name}}" />
                <div id="activityHelp" class="form-text">
                    Short descriptive names work best
                </div>
            </div>
            <div class="mb-3">
                <label for="activityType" class="form-label">Activity Type</label>
                <input class="form-control" list="dataListOptions" id="activityType" placeholder="Type to search..."
                    name="type" required value="{{type}}" />
                <datalist id="dataListOptions">
                    <option value="Running"></option>
                    <option value="Swimming"></option>
                    <option value="Lifting"></option>
                    <option value="Cycling"></option>
                    <option value="Something else"></option>
                </datalist>
                <div id="activityTypeHelp" class="form-text">
                    You can add your own activity types!
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <label for="date" class="form-label">Date</label>
                    <input class="form-control" type="date" id="date" name="date" required value="{{date}}" />
                </div>
                <div class="col">
                    <label for="startTime" class="form-label">Start Time</label>
                    <input class="form-control" type="time" id="startTime" name="startTime" required
                        value="{{startTime}}" />
                </div>
                <div class="col">
                    <label for="endTime" class="form-label">End Time</label>
                    <input class="form-control" type="time" id="endTime" name="endTime" required value="{{endTime}}" />
                </div>
            </div>
            <div class="mb-3"></div>
            <div class="mb-3"></div>
            <div class="mb-3"></div>
            <div class="mb-3"></div>
            <button type="submit" class="btn btn-outline-success" value="" name="submitEdit">Update</button>
            <a href="/activities-delete/{{ _id }}" class="btn btn-outline-danger">Delete</a>

        </form>
        {{/task}}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <script src="/js/checkDelete.js"></script>
</body>

</html>