<!DOCTYPE html>
<html lang="en">

<head>
    {{>shared/head}}
</head>

<body>
    <div class="container py-3">
        {{>shared/nav}}
        <!-- Tasks table -->
        <table class="table table-striped table-light table-hover table-borderless">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Type</th>
                    <th scope="col">Date</th>
                    <th scope="col">Start Time</th>
                    <th scope="col">End Time</th>
                    <th scope="col">Completion Status</th>
                    <th scope="col">Edit</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            <tbody>
                {{#tasks}}
                <tr>
                    <td>{{ name }}</td>
                    <td>{{ type }}</td>
                    <td>{{ date }}</td>
                    <td>{{ startTime }}</td>
                    <td>{{ endTime }}</td>
                    <td><input type="checkbox"></td>
                    <td><a href="/activities-edit/{{ _id }}" class="btn btn-warning">Edit</a></td>
                    <td>
                        <form action="" method="POST">
                            <button type="submit" name="deleteButton" value="{{ _id }}" class="btn btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
                {{/tasks}}
            </tbody>
        </table>
        {{^tasks}}
        <h1>You have no activities listed here</h1>
        <h1>I find your lack of fitness disturbing</h1>
        {{/tasks}}

        <!-- start of new TODO -->
        <div class="row">
            Week
        </div>
        <div class="row">
            <div class="col-md-4">
                <p>Name</p>
                <p>Total Exercises or Total exercises vs planned total exercises</p>
                <p>Exercises planned this week</p>
                <button class="btn btn-outline-dark">Add exercise</button>
            </div>
            <div class="col-md-8">
                <table class="table table-striped table-light table-hover table-borderless">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Date</th>
                            <th scope="col">Start Time</th>
                            <th scope="col">End Time</th>
                            <th scope="col">Completion Status</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#tasks}}
                        <tr>
                            <td>{{ name }}</td>
                            <td>{{ type }}</td>
                            <td>{{ date }}</td>
                            <td>{{ startTime }}</td>
                            <td>{{ endTime }}</td>
                            <td><input type="checkbox"></td>
                            <td><a href="/activities-edit/{{ _id }}" class="btn btn-warning">Edit</a></td>
                            <td>
                                <form action="" method="POST">
                                    <button type="submit" name="deleteButton" value="{{ _id }}" class="btn btn-danger">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        {{/tasks}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
